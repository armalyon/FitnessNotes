<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/historyCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/card_left_margin"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/colorCards"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="15dp"
        app:cardPreventCornerOverlap="true"
        android:minHeight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/divider_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_corner_radius"
                android:layout_marginRight="@dimen/card_corner_radius"
                android:text="Date"
                android:textSize="@dimen/header_cards_size" />

            <View
                android:id="@+id/divider21"
                android:layout_width="wrap_content"
                android:layout_height="3dp"

                android:background="@color/colorActionBar" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/setsListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/divider22"
                android:layout_width="match_parent"
                android:layout_height="3dp"

                android:layout_marginBottom="@dimen/card_corner_radius"
                android:background="@color/colorActionBar" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>